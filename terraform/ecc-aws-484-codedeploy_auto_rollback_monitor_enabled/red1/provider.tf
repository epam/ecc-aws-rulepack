terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4"
    }
  }
}

provider "aws" {
  profile = var.profile
  region  = var.default-region

  default_tags {
    tags = {
      CustodianRule    = "ecc-aws-484-codedeploy_auto_rollback_monitor_enabled"
      ComplianceStatus = "Red1"
    }
  }
}
