terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5"
    }
  }
}

provider "aws" {
  profile = var.profile
  region  = var.default-region
  default_tags {
    tags = {
      CustodianRule    = "ecc-aws-491-ec2_transit_gateway_auto_vpc_attach_disabled"
      ComplianceStatus = "Green"
    }
  }
}
