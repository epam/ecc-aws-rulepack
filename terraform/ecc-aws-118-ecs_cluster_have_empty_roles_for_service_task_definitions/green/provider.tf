terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5"
    }
  }
}

provider "aws" {
  profile = var.profile
  region  = var.default-region

  default_tags {
    tags = {
      CustodianRule    = "ecc-aws-118-ecs_cluster_have_empty_roles_for_service_task_definitions"
      ComplianceStatus = "Green"
    }
  }
}