terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5"
    }
  }
}

provider "aws" {
  profile = var.profile
  region  = var.default-region

  default_tags {
    tags = {
      CustodianRule    = "ecc-aws-190-ecs_task_definitions_secure_networking_modes_and_user_definitions"
      ComplianceStatus = "Red"
    }
  }
}