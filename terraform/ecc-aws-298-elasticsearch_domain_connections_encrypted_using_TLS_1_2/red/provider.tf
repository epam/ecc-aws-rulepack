terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4"
    }
  }
}

provider "aws" {
  profile = var.profile
  region  = var.default-region

  default_tags {
    tags = {
      CustodianRule    = "ecc-aws-298-elasticsearch_domain_connections_encrypted_using_TLS_1_2"
      ComplianceStatus = "Red"
    }
  }
}